<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ddf4f4f6"
        android:orientation="vertical" android:padding="8dp" android:id="@+id/root">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/app_name"
              android:textColor="#444444"
              android:textSize="18sp"
              android:singleLine="true"
              android:id="@+id/title"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/quote"

            android:text="@string/example"
            android:textSize="10sp"

            android:textColor="#444444"
            android:layout_below="@+id/title" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:isScrollContainer="false"/>
    <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading"
            android:layout_alignTop="@+id/title" android:layout_toRightOf="@+id/title"
            android:layout_above="@+id/quote"/>
</RelativeLayout>